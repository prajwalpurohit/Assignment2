<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
  <div class="container">

<div class="hero">

  <video autoplay loop muted plays-inline class="back-video">
<source src="/images/video.mp4" type="video/mp4">
>  </video>

</div> 

    <div class="row">
        <div class="offset-md-2 col-md-5"><br><br>
            <h1><%= title %></h1><br>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact name!"
                    name="name" 
                    value="<%= BookList.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Sold Copies</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the phone number!"
                    name="number"
                    value="<%= BookList.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Author's Email address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address!"
                    name="emailaddress" 
                    value="<%= BookList.emailaddress %>"
                    required>
                </div><br>

                <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

